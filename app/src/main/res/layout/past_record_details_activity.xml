<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/past_record_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TextView
            android:id="@+id/finish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="00:00:00"
            android:textSize="@dimen/timer" />
        <ImageView
            android:id="@+id/past_record_details_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center">
        <TextView
            android:text="distance:"
            android:id="@+id/past_record_details_distance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>
        <TextView
            android:text="0"
            android:id="@+id/past_record_details_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/past_record_details_distance_title"
            android:layout_margin="5dp"/>
        <TextView
            android:text="calories:"
            android:id="@+id/past_record_details_calories_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/past_record_details_distance_title"
            android:layout_margin="5dp"/>
        <TextView
            android:text="0"
            android:id="@+id/past_record_details_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/past_record_details_distance"
            android:layout_toRightOf="@+id/past_record_details_calories_title"
            android:layout_margin="5dp"/>
        <TextView
            android:text="speed:"
            android:id="@+id/past_record_details_speed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/past_record_details_calories_title"
            android:layout_margin="5dp"/>
        <TextView
            android:text="0"
            android:id="@+id/past_record_details_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/past_record_details_calories"
            android:layout_toRightOf="@+id/past_record_details_speed_title"
            android:layout_margin="5dp"/>
    </RelativeLayout>
</LinearLayout>