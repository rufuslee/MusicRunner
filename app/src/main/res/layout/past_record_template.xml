<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <TextView
        android:text="Thursday"
        android:id="@+id/past_record_date"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/light_yellow"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"/>
    <LinearLayout
        android:id="@+id/past_record_entry"
        android:layout_below="@+id/past_record_date"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/green_blue">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="30dp">
            <TextView
                android:text="52 mi"
                android:id="@+id/past_record_entry_distance"
                android:textSize="@dimen/past_record_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="00:00:00"
                android:id="@+id/past_record_entry_duration"
                android:textSize="@dimen/past_record_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="5433 ft"
                android:id="@+id/past_record_entry_elevation"
                android:textSize="@dimen/past_record_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/past_record_entry_graph"
                android:background="@drawable/pilot_stand"
                android:layout_width="70dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">
            <ImageView
                android:id="@+id/past_record_entry_share_button"
                android:background="@drawable/share_button"
                android:layout_width="100dp"
                android:layout_height="30dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/past_record_entry"
        android:background="@color/dark_green_blue"
        android:layout_marginBottom="10dp">
        <TextView
            android:text="song"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
</RelativeLayout>