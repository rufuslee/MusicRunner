<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="MainBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="MainAppTheme" parent="MainBaseTheme">
        <item name="android:actionBarStyle">@style/MainActionBar</item>
    </style>

    <style name="MainActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/action_bar_background</item>
        <item name="android:displayOptions">showHome</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

</resources>
